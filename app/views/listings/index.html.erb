<div class="container-fluid px-10">

  <h1 class="title px-4">Browse trips</h1>

  <%# <%= link_to "Create Listing",  new_listing_path, class: "button-red" %>

  <div class="row gx-5 gy-5 d-flex px-4">
        <% @listings.each do |listing| %>
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 card-listing">

          <%= link_to listing_path(listing), class:"text-decoration-none" do %>
            <div class="cards-container">

              <div class="hover-card">
                <%= cl_image_tag listing.photo.key ,class: "image" %>
                <p class="hidden-text"><%= listing.short_description %></p>
              </div>

              <div class="card-description">
                <h3 class="card-title space pt-2"><%=listing.name %></h3>
              </div>

              <div class="card-details justifiy-content-start">
                <p class="card-info space"><%=listing.depart_date %></p>
                <p class="card-info space"><%=listing.capacity%> people</p>
              </div>

              <div class="card-details justifiy-content-end">
                <p class="card-price space">Â£ <%=listing.price %></p>
                <p class="card-title space"><%=listing.rating%> <i class="fas fa-star"></i></p>
              </div>
                <%# <%= link_to "Show more", listing_path(listing)%>
            </div>
          <% end %>
        </div>
        <% end %>

	</div>
</div>
